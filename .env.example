NODE_ENV=production

# FamilySearch (Beta)
FS_ENV=beta
FS_APP_KEY=YOUR_APP_KEY
FS_REDIRECT_URI=https://your-domain.example.com/api/auth/callback
FS_AUTH_BASE_URL=https://identbeta.familysearch.org/cis-web/oauth2/v3
FS_API_BASE_URL=https://api-integ.familysearch.org
FS_OAUTH_SCOPE=openid profile https://api.familysearch.org/auth/familytree.read

# App origin
NEXT_PUBLIC_APP_ORIGIN=https://your-domain.example.com

# Session secret (min 32 chars)
SESSION_SECRET=please-change-me-32+characters-long

# Database (Prisma)
DATABASE_URL=postgresql://user:password@host:5432/genealogy?schema=public
