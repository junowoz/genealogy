// Prisma schema for Genealogy
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model McpAuthSession {
  sessionId   String  @id
  accessToken String
  refreshToken String?
  scope       String?
  tokenType   String   @default("Bearer")
  expiresAt   DateTime
  personId    String?
  displayName String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

